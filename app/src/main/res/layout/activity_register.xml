<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        //usuario

        //email

        //senha

        <EditText
            android:id="@+id/et_nome_resgistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_email_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_senha_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="senha"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bt_registrar_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="registrar" />

        <Button
            android:id="@+id/bt_voltar_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="voltar" />

        <TextView
            android:id="@+id/bt_txtviwer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EU SOU UMA TELA DE REGISTRO" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>